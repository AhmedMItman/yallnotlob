<p id="notice"><%= notice %></p>

<h1>Friendships</h1>
<table>
  <thead>
    <tr>
      <th>Friend</th>
      <th colspan="10"></th>
    </tr>
  </thead>

  <tbody>
    <% @friendships.each do |friendship| %>
      <tr>
        <!--<td><% friendship.user.name %></td>-->
        <td><%= friendship.friend.name %></td>
        <td><%= link_to 'Show', friendship %></td>
        <!--<td><%= link_to 'Edit', edit_friendship_path(friendship) %></td>-->
        <td><%= link_to 'Remove', friendship, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

