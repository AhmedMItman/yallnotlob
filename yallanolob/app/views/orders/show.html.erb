<h1>Items</h1>

<table id="ItemsTable" class="table">
  <thead>
  <tr>
    <th>Person</th>
    <th>Item</th>
    <th>Quantity</th>
    <th>Price</th>
    <th>Comment</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @order.items.each do |item| %>
    <tr itemid=<%= item.id %>>
      <td><%= item.user.name %></td>

      <td><%= item.quantity %></td>
      <td><%= item.price %></td>
      <td><%= item.comment %></td>
      <% if current_user.id == item.user_id %>
      <td><%=  link_to 'Edit', edit_item_path(item) %></td>
        <td class="deleteItem"><a>Delete</a></td>
        <% end %>
    </tr>
  <% end %>
  </tbody>
</table>
</div>
