<p id="notice"><%= notice %></p>

<h1>Orders</h1>

<table class="table">
  <thead>
    <tr>
      <th>Resturant</th>
      <th>Menu</th>
      <th>Type</th>
      <th>Status</th>
      <th>By</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.resturant %></td>
        <td><%= order.menu %></td>
        <td><%= order.typ %></td>
        <td><%= order.statu %></td>
        <td><%= order.user.name %></td>
        <td><%= link_to 'Show', order %></td>
        <% if current_user.name == order.user.name%>

        <td><%= link_to 'Edit', edit_order_path(order) %></td>
        <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

