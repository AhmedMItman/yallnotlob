<p id="notice"><%= notice %></p>
<h1>Orders</h1>

<table class="table" id="orders">
  <thead>
    <tr>
      <th>Resturant</th>
      <th>Type</th>
      <th>Status</th>
      <th>By</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <input id="whichOrder" type="hidden" value=<%= order.id %> >
        <td><%= order.resturant %></td>
        <td><%= order.typ %></td>
        <td><%= order.statu %></td>
        <td><%= order.user.name %></td>
        <td><%= link_to 'Show', order %></td>
        <% if current_user.name == order.user.name%>

        <td><%= link_to 'Edit', edit_order_path(order) %></td>
        <td><%= link_to 'Remove', order, method: :delete, :class=>"DeleteOrder",data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="center"><%= will_paginate @orders, renderer: BootstrapPagination::Rails, previous_label: "Older", next_label: "Newer" %></div>
<br>
<%= link_to 'New Order', new_order_path %>
